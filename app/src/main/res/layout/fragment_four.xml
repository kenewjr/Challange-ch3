<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourFragment">


    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/inputusia"
        android:hint="Masukan Usia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/inputusia"
        android:layout_centerInParent="true"
        android:id="@+id/inputalamat"
        android:hint="Masukan Alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_below="@id/inputalamat"
        android:layout_centerInParent="true"
        android:id="@+id/inputpekerjaan"
        android:hint="Masukan Pekerjaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:text="Go To Screen 3"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputpekerjaan"
        android:id="@+id/kembalike3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>